package YazOryantasyon;   //Kullanıcıdan istenen sayının hafta içine mi yoksa hafta sonuna mı denk geldiğini bulan program
import java.util.Scanner;
public class Gun{
	public static void main(String[] args) {
	Scanner giris = new Scanner(System.in);
	System.out.println("Lutfen 1-7 arasindan bir sayi girisi yapiniz.");
	int a = giris.nextInt();
	
	switch (a) {
	case 1:
	case 2:
	case 3:
	case 4:
	case 5: System.out.println("Hafta ici."); break;
	case 6:
	case 7: System.out.println("Hafta sonu.");
	}
	}
}
	
