package YazOryantasyon; //1'den girilen sayıya kadar olan sayıların toplamını hesaplayan program
import java.util.Scanner;
public class SayiToplama{
	public static void main(String[] args) {
		int top = 0;
		Scanner giris = new Scanner(System.in);
		System.out.println("Bir adet sayi giriniz.");
		int a = giris.nextInt();
		for (int i=1; i<=a; ++i) {
			top += i;
		}
		System.out.println("1'den kullanici tarafindan girilen sayiya kadar olan sayilarin toplami=" +top);
	}
}
